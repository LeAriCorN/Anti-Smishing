<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory android:title="앱 정보" android:layout="@layout/Pref_Layout">
    <Preference
        android:key="App_ver"
        android:title="앱 버전"
        android:icon="@drawable/icon_appver"
        android:summary="0.1.0"/>
    <Preference
        android:key="Feedback"
        android:title="문의하기"
        android:icon="@drawable/icon_plane"
        android:summary="lazerbear77@gmail.com">
    </Preference>

  </PreferenceCategory>

  <PreferenceCategory android:title="설정" android:layout="@layout/Pref_Layout">

    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/icon_input"
        android:key="Switch_ClipboardListen"
        android:summary="복사된 URL을 자동으로 입력합니다"
        android:title="URL 자동 입력" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="Switch_KnowCliphasURL"
        android:icon="@drawable/icon_fastmove"
        android:summary="URL을 복사하면 빠르게 앱으로 이동 할 수 있습니다"
        android:title="빠른 앱 이동" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="Switch_TrueSite"
        android:icon="@drawable/icon_true"
        android:summaryOff="기능을 사용하지 않습니다"
        android:summaryOn="기능을 사용하고 있습니다"
        android:title="안전한 사이트 유도 (beta)" />    
  </PreferenceCategory>

</PreferenceScreen>